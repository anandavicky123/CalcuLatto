<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="@dimen/thefragments_padding"
    tools:context=".ui.thefragments">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_tfs"
            android:layout_width="match_parent"
            android:layout_height="160dp">

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_tfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <TextView
            android:id="@+id/selecttv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/tfs_main_s"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/tfs_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tfs_1_tv"
                style="@style/blackandwhitetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfs_1_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint=""
                        android:inputType="numberSigned|numberDecimal" />

                    <TextView
                        android:id="@+id/hint_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/secondet1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/tfs_1_s"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:spinnerMode="dialog"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tfs_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tfs_2_tv"
                style="@style/blackandwhitetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfs_2_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint=""
                        android:inputType="numberSigned|numberDecimal" />

                    <TextView
                        android:id="@+id/hint_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/secondet2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/tfs_2_s"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:spinnerMode="dialog"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tfs_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tfs_3_tv"
                style="@style/blackandwhitetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfs_3_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint=""
                        android:inputType="numberSigned|numberDecimal" />

                    <TextView
                        android:id="@+id/hint_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/secondet3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/tfs_3_s"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:spinnerMode="dialog"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tfs_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tfs_4_tv"
                style="@style/blackandwhitetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfs_4_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint=""
                        android:inputType="numberSigned|numberDecimal" />

                    <TextView
                        android:id="@+id/hint_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/secondet4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/tfs_4_s"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:spinnerMode="dialog"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tfs_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tfs_5_tv"
                style="@style/blackandwhitetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfs_5_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint=""
                        android:inputType="numberSigned|numberDecimal" />

                    <TextView
                        android:id="@+id/hint_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/secondet5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/tfs_5_s"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:spinnerMode="dialog"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView6"
            style="@style/blackandwhitetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/results" />

        <LinearLayout
            android:id="@+id/tfs_main_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder4"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tfs_main_result_tv"
                style="@style/blackandwhitetext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/tfs_main_result_s"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:spinnerMode="dialog"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


    </LinearLayout>
</ScrollView>